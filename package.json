    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dexie": "^4.0.11",
    "fast-levenshtein": "^3.0.0",
    "jest": "^29.7.0",
    "p-limit": "^3.1.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.3",
    "style-loader": "^4.0.0",
    "tldts": "^7.0.0"
  }
