{
  "manifest_version": 2,
  "name": "Firefox Recap",
  "version": "1.0.0",
  "description": "Categorize and analyze browsing history for productivity insights.",
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "downloads",
    "https://big.oisd.nl/*"
  ],
  "optional_permissions": [
    "trialML"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "recap.html",
    "assets/videos/*.mp4"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "firefoxrecap@gmail.com"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; connect-src https://big.oisd.nl blob:;"
}
